		<route routePolicyRef="myPolicy" id="lookup-paymenttype" autoStartup="true">
			<from
				uri="file:/opt/app/sas/custom/data/lookup_paymenttype?move=.done&amp;doneFileName=${file:name}.done" />
			<!--<from
				uri="file:/opt/app/sas/ESPData/lookup_postpaid?move=.done&amp;doneFileName=${file:name}.done" /> -->
			<onCompletion>
				<process ref="startRequirringRoute"></process>
			</onCompletion>
			<split streaming="true" parallelProcessing="true">
				<tokenize token="\n" group="10000"></tokenize>
				<unmarshal>
					<csv />
				</unmarshal>

				<multicast>
					<log message="Starting to process LOOKUP PAYMENT TYPE file: ${header.CamelFileName}" />
					<to
						uri="dfESP://localhost:55555/POSTPAID_THROTTLE_EVENT/THROTTLE_EVENT_QUERY/PAIDTYPE_SOURCE_LOOKUP" />
				<!-- <to uri="dfESP://10.120.2.63:55555/PREPAID_THROTTLE_EVENT/THROTTLE_EVENT_QUERY/PAIDTYPE_SOURCE_LOOKUP" />
				<to uri="dfESP://10.120.2.63:55555/FONIC_THROTTLE_EVENT/THROTTLE_EVENT_QUERY/PAIDTYPE_SOURCE_LOOKUP" />  -->
					<log message="Done processing LOOKUP PAYMENT TYPE file: ${header.CamelFileName}" />
				</multicast>


			</split>
		</route>

		<route routePolicyRef="myPolicy" id="lookup-requirring" autoStartup="false">
			<from
				uri="file:/opt/app/sas/custom/data/lookup_recurring?move=.done&amp;doneFileName=${file:name}.done&amp;recursive=true" />
			<!--<from
				uri="file:/opt/app/sas/ESPData/lookup_requirring?move=.done&amp;doneFileName=${file:name}.done&amp;recursive=true" />-->
			<onCompletion>
				<delay>
				<constant>30000</constant>
				</delay>
				<process ref="startPostpaidRoute"></process>
				<!--<process ref="startPcrfFtpDuesseldorfRoute"></process>
				<process ref="startPcrfFtpBerlinRoute"></process>-->
				<!--<process ref="startPrepaidRoute"></process>
				<process ref="startFonicRoute"></process> 
				 -->
			</onCompletion>
			<unmarshal>
				<zipFile/>
			</unmarshal>
			<split streaming="true" parallelProcessing="true">
				<!--  <log message="Starting to process LOOKUP_RECURRING file: ${header.CamelFileName}" /> -->
				
				<tokenize token="\n" group="10000"></tokenize>
				<unmarshal>
					<csv />
				</unmarshal>
				<multicast>
					<log message="Starting to process LOOKUP_REQUIRRING file: ${header.CamelFileName}" />
					<to
						uri="dfESP://localhost:55555/POSTPAID_THROTTLE_EVENT/THROTTLE_EVENT_QUERY/REQUIRRING_TYPE_SOURCE_LOOKUP" />
				<!-- <to uri="dfESP://10.120.2.63:55555/PREPAID_THROTTLE_EVENT/THROTTLE_EVENT_QUERY/PAIDTYPE_SOURCE_LOOKUP" />
				<to uri="dfESP://10.120.2.63:55555/FONIC_THROTTLE_EVENT/THROTTLE_EVENT_QUERY/PAIDTYPE_SOURCE_LOOKUP" />  -->
					
				</multicast>

				<log message="Done processing LOOKUP_REQUIRRING file: ${header.CamelFileName}" />
			</split>
		</route>

